<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <ImageView
            android:layout_width="411dp"
            android:layout_height="729dp" app:srcCompat="@drawable/bart"
            android:id="@+id/bartImageView" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:scaleType="centerInside"
            android:onClick="fade"/>

    <ImageView
            android:layout_width="411dp"
            android:layout_height="729dp" app:srcCompat="@drawable/homer"
            android:id="@+id/homerImageView" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:scaleType="centerInside"
            android:onClick="fade" android:alpha="0"/>

</android.support.constraint.ConstraintLayout>